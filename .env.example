# Discord
DISCORD_TOKEN=Bot YOUR_TOKEN
CHANNEL_ID=1234567890

# Bybit V5 (API key needs Futures permissions)
BYBIT_API_KEY=xxxxx
BYBIT_API_SECRET=xxxxx
BYBIT_TESTNET=false

# Trading
CATEGORY=linear
QUOTE=USDT
DEFAULT_LEVERAGE=5

# Risk / Limits
MAX_CONCURRENT_TRADES=3
MAX_TRADES_PER_DAY=20

# Entry rules
ENTRY_EXPIRATION_MIN=180
ENTRY_TOO_FAR_PCT=0.5          # wenn Preis schon zu weit "durch" ist -> skip
ENTRY_TRIGGER_BUFFER_PCT=0.0    # optional: trigger leicht vorziehen
ENTRY_LIMIT_PRICE_OFFSET_PCT=0.00 # optional: limit leicht aggressiver machen (gegen miss-fill)

# SL/TP behavior
INITIAL_SL_PCT=19.0            # fallback falls Signal keinen SL hat
MOVE_SL_TO_BE_ON_TP1=true

# TP splits (sum=100)
TP_SPLITS=30,30,30,10

# DCA sizing (position add % vom initial qty)
DCA_QTY_MULTS=1.0,1.0,1.0      # kannst du später ändern (zB 1.5/1.0/0.5)

# Polling Discord
POLL_SECONDS=15

# Logging / Safety
DRY_RUN=false
